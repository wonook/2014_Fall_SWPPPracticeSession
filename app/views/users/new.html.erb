<h1>Please enter your credentials below</h1>

<%= form_for(@user) do |f| %>
<%= render 'form' %>
    <div class="actions">
        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.text_field :password %>

        <%= submit_tag 'Sign up' %>
        <%= submit_tag 'Log In', name: 'login_button' %>
    </div>
<% end %>

<br/><br/><br/>

<%= link_to 'Show Full List', users_path %>
